CREATE TABLE ESPECIALIDADE (
	nomeEspecialidade	varchar(20)	NOT NULL,
    codEspecialidade	integer	PRIMARY KEY
);
CREATE TABLE possui (
	constraint fk_crm FOREIGN KEY (crm) REFERENCES MEDICO (crm),
    constraint fk_codEspecialidade FOREIGN KEY (codEspecialidade) REFERENCES ESPECIALIDADE (codEspecialidade)
);
CREATE TABLE CONSULTA (
	constraint fk_crm FOREIGN KEY (crm) REFERENCES MEDICO (crm),
	constraint fk_cpf FOREIGN KEY (cpf) REFERENCES PESSOA (cpf),
    data date NOT NULL,
    add PRIMARY KEY(fk_crm, fk_cpf, data)
);
CREATE TABLE MEDICO (
	crm	numeric(8) PRIMARY KEY,
    nome	varchar(30)	NOT NULL 
);
CREATE TABLE RECEITA (
	data	date	NOT NULL,
    idReceita integer PRIMARY KEY auto_increment    
);
CREATE TABLE MEDICAMENTO (
	descricao varchar(30) NOT NULL,
    codMedicamento numeric(10) PRIMARY KEY,
    nome	varchar(20)	NOT NULL
);
CREATE TABLE PACIENTE (
	cpf	numeric(11) PRIMARY KEY,
    nome	varchar(40) NOT NULL, 
    idade	integer NOT NULL,
    sexo char(1) NOT NULL,
    cidade	varchar(30) NOT NULL,
    bairro	varchar(30) NOT NULL,
    estado 	char(2) NOT NULL,
    cep		numeric(8) NOT NULL,
    complemento	varchar(30)
);
